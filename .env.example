# Server Configuration
PORT=3000
NODE_ENV=production

# Hume AI Configuration
HUME_API_KEY=your_hume_api_key
HUME_SECRET_KEY=your_hume_secret_key
NEXT_PUBLIC_HUME_CONFIG_ID=your_hume_config_id

# D-ID Configuration
DID_API_KEY=your_did_api_key

# Vision AI Configuration (choose one or both)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Upstash Redis Configuration
UPSTASH_REDIS_URL=your_upstash_redis_url
UPSTASH_REDIS_TOKEN=your_upstash_redis_token

# Upstash Vector Configuration
UPSTASH_VECTOR_URL=your_upstash_vector_url
UPSTASH_VECTOR_TOKEN=your_upstash_vector_token

# Photo Storage Configuration

# Option 1: Cloudflare R2 (Recommended - Free 10GB, S3-compatible, no egress fees)
# Get credentials from: https://dash.cloudflare.com → R2 → Manage R2 API Tokens
AWS_ACCESS_KEY_ID=your_r2_access_key_id
AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key
AWS_REGION=auto
S3_BUCKET_NAME=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Option 2: AWS S3 (if you prefer AWS)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name
# R2_ENDPOINT=  (leave empty for AWS S3)

# Application Settings
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

